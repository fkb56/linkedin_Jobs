{
    "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2019",
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2019"],
      "module": "CommonJS"
    },
    "include": [
      "nodes/**/*"
    ],
    "exclude": [
      "node_modules/**/*",
      "dist/**/*"
    ]
  }